        ></LinearLayout>

        <LinearLayout
            android:id = "@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="30dp"
            android:weightSum="6"
            >
            <Button
                android:id="@+id/shop_button"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_above="@+id/appwidget_bundle"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="2"
                android:height="55dp"
                android:background="@drawable/contained_square_button"
                android:text="Shop\n\n"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:drawableTop="@drawable/shop_resize"
                android:textAllCaps="false"
                >

            </Button>
            <Button
                android:id="@+id/help_button"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_above="@+id/appwidget_bundle"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="2"
                android:height="55dp"
                android:background="@drawable/contained_square_button"
                android:text="Help\n\n"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:drawableTop="@drawable/help_resize"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/pay_button"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_above="@+id/appwidget_bundle"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="2"
                android:height="55dp"
                android:background="@drawable/contained_square_button"
                android:text="Pay\n\n"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:drawableTop="@drawable/pay_resize"
                android:textAllCaps="false"/>


        </LinearLayout>
